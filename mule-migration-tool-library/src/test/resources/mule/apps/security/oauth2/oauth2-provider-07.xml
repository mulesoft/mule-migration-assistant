    <oauth2-provider:config name="Test_Scoped_Provider"
                            providerName="Test Scoped Provider"
                            resourceOwnerSecurityProvider="resourceOwnerSecurityProvider"
                            clientSecurityProvider="clientSecurityProvider"
                            listenerConfig="Test_Scoped_Provider_httpListenerConfig"
                            clientStore="clientObjectStore"
                            scopes="GUEST,USER,ADMIN">
        <oauth2-provider:client-validation-rate-limiter>
            <oauth2-provider:period-rate-limiter/>
        </oauth2-provider:client-validation-rate-limiter>
        <oauth2-provider:token-config tokenStore="tokenObjectStore"/>
        <oauth2-provider:authorization-config authorizationCodeStore="authorizationCodeObjectStore"/>
    </oauth2-provider:config>

    <http:listener-config name="Test_Scoped_Provider_httpListenerConfig">
